<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/nav_header_beige_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Ícone de mensagem -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_message"
            android:background="@drawable/chat_icon_background"
            android:padding="12dp"
            android:contentDescription="Ícone de chat"
            android:tint="@color/orange_primary" />

        <!-- Informações do chat -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/instrumentNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Instrumento"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_instrument_name"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/roleBadgeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="Seu anúncio"
                android:textSize="12sp"
                android:textColor="@color/orange_primary"
                android:background="@drawable/price_background" />

            <TextView
                android:id="@+id/lastMessageTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Última mensagem: 12:34"
                android:textSize="14sp"
                android:textColor="@color/text_gray_light" />

        </LinearLayout>

        <!-- Seta indicativa -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward"
            android:contentDescription="Abrir chat"
            android:tint="@color/text_gray_light" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
