<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/beige_card"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <!-- Avatar do chat -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_message"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/orange_primary"
            android:background="@color/beige_light"
            android:padding="12dp"
            android:contentDescription="Avatar do chat"
            android:tint="@color/orange_primary" />

        <!-- Informações do chat -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- Nome do instrumento -->
            <TextView
                android:id="@+id/instrumentNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Instrumento"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_black"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Badge de papel -->
            <TextView
                android:id="@+id/roleBadgeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="Seu anúncio"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/chat_badge_background"
                android:textStyle="bold" />

            <!-- Última mensagem -->
            <TextView
                android:id="@+id/lastMessageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Última mensagem aqui..."
                android:textSize="14sp"
                android:textColor="@color/text_gray_light"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Horário da última mensagem -->
            <TextView
                android:id="@+id/lastMessageTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="12:34"
                android:textSize="12sp"
                android:textColor="@color/text_gray_light" />

        </LinearLayout>

        <!-- Indicador de não lida (opcional) -->
        <View
            android:id="@+id/unreadIndicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/unread_indicator"
            android:layout_marginEnd="12dp"
            android:visibility="gone" />

        <!-- Seta indicativa -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward"
            android:contentDescription="Abrir chat"
            android:tint="@color/text_gray_light" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>