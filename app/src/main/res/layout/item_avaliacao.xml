<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/nav_header_beige_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Cabeçalho da Avaliação -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Ícone de Estrela -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star"
                android:tint="@color/orange_primary"
                android:layout_marginEnd="8dp" />

            <!-- Nome do Instrumento -->
            <TextView
                android:id="@+id/textoNomeInstrumento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nome do Instrumento"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="@color/text_instrument_name"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Nota -->
            <TextView
                android:id="@+id/textoNota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/orange_primary"
                android:textStyle="bold"
                android:background="@drawable/price_background"
                android:padding="8dp"
                android:minWidth="40dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Rating Bar -->
        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="5"
            android:stepSize="1"
            android:isIndicator="true"
            android:layout_marginBottom="8dp" />

        <!-- Informações do Locatário -->
        <TextView
            android:id="@+id/textoLocatario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avaliado por: Nome do Usuário"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/text_category_brown"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/ic_profile"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

        <!-- Comentário -->
        <TextView
            android:id="@+id/textoComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentário da avaliação"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/text_gray_light"
            android:background="@drawable/status_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:lineSpacingExtra="2dp"
            android:drawableStart="@drawable/ic_quote"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:visibility="gone" />

        <!-- Data da Avaliação -->
        <TextView
            android:id="@+id/textoData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avaliado em dd/mm/yyyy"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="@color/text_gray_light"
            android:gravity="end"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="4dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
