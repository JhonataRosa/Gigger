<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beige_light">

    <!-- Lista de Avaliações -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaAvaliacoes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Estado Vazio -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/emptyStateCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_star"
                android:contentDescription="Ícone de avaliação"
                android:layout_marginBottom="16dp"
                android:tint="@color/orange_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nenhuma avaliação recebida ainda"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/text_black"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quando você alugar instrumentos e os proprietários te avaliarem, as avaliações aparecerão aqui."
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/text_gray_light"
                android:gravity="center"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
