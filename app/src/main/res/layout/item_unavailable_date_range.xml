<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/category_card_background"
    android:layout_margin="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_calendar"
        android:layout_marginEnd="16dp"
        android:contentDescription="Ícone de calendário"
        android:tint="@color/text_gray_light" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/startDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data inicial: 01/01/2025"
            android:textSize="16sp"
            android:textColor="@color/text_category_brown"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/endDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data final: 05/01/2025"
            android:textSize="16sp"
            android:textColor="@color/text_category_brown"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INDISPONÍVEL"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@drawable/status_background"
        android:padding="8dp"
        android:textStyle="bold"
        android:textAllCaps="true" />

</LinearLayout>
