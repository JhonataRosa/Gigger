<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange_background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/orange_primary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Avaliar Locatário"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card de Informações do Locatário -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/nav_header_beige_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Título do Card -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detalhes do Locatário"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/text_instrument_name"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"
                        android:drawableStart="@drawable/ic_profile"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                    <!-- Nome do Instrumento -->
                    <TextView
                        android:id="@+id/textoNomeInstrumento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Carregando..."
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/text_instrument_name"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <!-- Locatário -->
                    <TextView
                        android:id="@+id/textoNomeLocatario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Locatário: Nome"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textColor="@color/text_category_brown"
                        android:layout_marginBottom="8dp" />

                    <!-- Período do Aluguel -->
                    <TextView
                        android:id="@+id/textoPeriodo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Período: dd/mm/yyyy a dd/mm/yyyy"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textColor="@color/text_gray_light"
                        android:drawableStart="@drawable/ic_calendar"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card de Avaliação -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/nav_header_beige_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Título da Avaliação -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sua Avaliação"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/text_instrument_name"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:drawableStart="@drawable/ic_star"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                    <!-- Rating Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="24dp">

                        <!-- Texto da Nota -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sua nota:"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:textColor="@color/text_category_brown"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <!-- Rating Bar Centralizado -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <RatingBar
                                android:id="@+id/ratingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:rating="0"
                                android:stepSize="0.5"
                                android:layout_marginEnd="12dp"
                                android:progressTint="@color/orange_primary"
                                style="@style/Widget.AppCompat.RatingBar.Small" />

                            <TextView
                                android:id="@+id/textoNotaSelecionada"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/orange_primary" />

                        </LinearLayout>

                        <!-- Texto explicativo -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1 = Muito insatisfeito, 5 = Muito satisfeito"
                            android:textSize="12sp"
                            android:textColor="@color/text_gray_light"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Campo de comentário -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Comentário (opcional)"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textColor="@color/text_category_brown"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:boxBackgroundColor="@color/beige_light"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:hintTextColor="@color/text_gray_light"
                        app:counterEnabled="true"
                        app:counterMaxLength="500">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/campoComentario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Escreva seu comentário aqui..."
                            android:inputType="textMultiLine"
                            android:maxLines="4"
                            android:minLines="3"
                            android:maxLength="500"
                            android:textColor="@color/text_black"
                            android:textColorHint="@color/text_gray_light" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botão Avaliar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/botaoAvaliar"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Enviar Avaliação"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/orange_primary"
                        app:cornerRadius="28dp"
                        app:icon="@drawable/ic_star"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconTint="@color/white" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>