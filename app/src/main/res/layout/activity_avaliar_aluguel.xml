<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige_light">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/orange_primary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Avaliar Aluguel"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card de Informações do Aluguel -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/nav_header_beige_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Título da Seção -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detalhes do Aluguel"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/text_instrument_name"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"
                        android:drawableStart="@drawable/ic_music_note"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                    <!-- Nome do Instrumento -->
                    <TextView
                        android:id="@+id/textoNomeInstrumento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nome do Instrumento"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/text_instrument_name"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <!-- Proprietário -->
                    <TextView
                        android:id="@+id/textoProprietario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Proprietário: Nome"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textColor="@color/text_category_brown"
                        android:layout_marginBottom="8dp" />

                    <!-- Período do Aluguel -->
                    <TextView
                        android:id="@+id/textoPeriodoAluguel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Período: dd/mm/yyyy a dd/mm/yyyy"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textColor="@color/text_gray_light"
                        android:drawableStart="@drawable/ic_calendar"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card de Avaliação -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/nav_header_beige_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Título da Avaliação -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sua Avaliação"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/text_instrument_name"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:drawableStart="@drawable/ic_star"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                    <!-- Rating Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="24dp">

                        <!-- Texto da Nota -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sua nota:"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:textColor="@color/text_category_brown"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <!-- Rating Bar Centralizado -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <RatingBar
                                android:id="@+id/ratingBar"
                                style="?android:attr/ratingBarStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:rating="0"
                                android:stepSize="0.5"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/textoNotaSelecionada"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5.0"
                                android:textAppearance="?attr/textAppearanceHeadline6"
                                android:textColor="@color/orange_primary"
                                android:textStyle="bold"
                                android:layout_marginStart="16dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Campo de Comentário -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Comentário (opcional)"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textColor="@color/text_category_brown"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:boxStrokeColor="@color/orange_primary"
                        app:hintTextColor="@color/orange_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/campoComentario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="120dp"
                            android:gravity="top|start"
                            android:maxLines="5"
                            android:inputType="textMultiLine|textCapSentences"
                            android:hint="Escreva seu comentário aqui..."
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Contador de Caracteres -->
                    <TextView
                        android:id="@+id/textoContadorCaracteres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0/500"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="@color/text_gray_light"
                        android:gravity="end"
                        android:layout_marginBottom="20dp" />

                    <!-- Botão de Avaliar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/botaoAvaliar"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Enviar Avaliação"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        app:cornerRadius="28dp"
                        app:icon="@drawable/ic_star"
                        app:iconGravity="textStart"
                        app:iconTint="@color/white"
                        app:backgroundTint="@color/orange_primary"
                        android:textColor="@color/white" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
