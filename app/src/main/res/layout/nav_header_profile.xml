<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/nav_header_background"
    android:padding="24dp">

    <!-- Profile Picture -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/navProfileImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_profile"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/white" />

    <!-- User Name -->
    <TextView
        android:id="@+id/navUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:text="JoÃ£o Silva"
        android:textColor="@color/text_dark_brown"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- User Email -->
    <TextView
        android:id="@+id/navUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="joao.silva@email.com"
        android:textColor="@color/text_dark_brown"
        android:textSize="14sp" />

    <!-- Ver Perfil Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/navViewProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Ver perfil"
        android:textColor="@color/text_dark_brown"
        android:textSize="14sp"
        android:padding="8dp"
        app:cornerRadius="20dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="@color/text_dark_brown"
        app:strokeWidth="1dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginBottom="16dp" />

</LinearLayout>
