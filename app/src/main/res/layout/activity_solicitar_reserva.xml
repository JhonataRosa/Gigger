<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_primary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/orange_primary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Solicitar Reserva"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/orange_background"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card de InformaÃ§Ãµes do Instrumento -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/nav_header_beige_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/instrumentNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nome do Instrumento"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_instrument_name"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/availabilityInfoTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“… Verificando disponibilidade..."
                        android:textSize="14sp"
                        android:textColor="@color/status_pending"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone"
                        android:drawableStart="@drawable/ic_calendar"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_music_note"
                            android:layout_marginEnd="8dp"
                            android:tint="@color/orange_primary" />

                        <TextView
                            android:id="@+id/instrumentCategoryTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Categoria"
                            android:textSize="16sp"
                            android:textColor="@color/text_category_brown" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PreÃ§o por dia:"
                            android:textSize="16sp"
                            android:textColor="@color/text_category_brown"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/instrumentPriceTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 0,00/dia"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/price_background"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card de SeleÃ§Ã£o de PerÃ­odo -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/nav_header_beige_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar"
                            android:layout_marginEnd="8dp"
                            android:tint="@color/orange_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selecionar PerÃ­odo"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_instrument_name" />

                    </LinearLayout>

                    <!-- Data de InÃ­cio -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Data de InÃ­cio:"
                            android:textSize="16sp"
                            android:textColor="@color/text_category_brown" />

                        <TextView
                            android:id="@+id/startDateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selecionar data"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/orange_primary"
                            android:padding="8dp"
                            android:background="@drawable/button_unselected_background"
                            android:minWidth="120dp"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Data de Fim -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Data de Fim:"
                            android:textSize="16sp"
                            android:textColor="@color/text_category_brown" />

                        <TextView
                            android:id="@+id/endDateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selecionar data"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/orange_primary"
                            android:padding="8dp"
                            android:background="@drawable/button_unselected_background"
                            android:minWidth="120dp"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Resumo do PerÃ­odo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone"
                        android:id="@+id/periodSummaryLayout">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_info"
                            android:layout_marginEnd="8dp"
                            android:tint="@color/orange_primary" />

                        <TextView
                            android:id="@+id/periodSummaryTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PerÃ­odo selecionado"
                            android:textSize="14sp"
                            android:textColor="@color/text_category_brown" />

                    </LinearLayout>

                    <!-- Total Calculado -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        android:id="@+id/totalLayout">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total:"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_instrument_name" />

                        <TextView
                            android:id="@+id/totalPriceTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 0,00"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/price_background"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card de ObservaÃ§Ãµes -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/nav_header_beige_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_message"
                            android:layout_marginEnd="8dp"
                            android:tint="@color/orange_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ObservaÃ§Ãµes (Opcional)"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_instrument_name" />

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Adicione observaÃ§Ãµes sobre sua solicitaÃ§Ã£o..."
                        app:boxBackgroundColor="@color/white"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:hintTextColor="@color/orange_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/observationsEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:maxLines="4"
                            android:textColor="@color/text_instrument_name"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- BotÃ£o de Solicitar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/solicitarButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Solicitar Reserva"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange_primary"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_send"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/white"
                android:enabled="false" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
