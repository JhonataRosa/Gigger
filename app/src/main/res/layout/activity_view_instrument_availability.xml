<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange_background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_primary">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/orange_primary"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
            app:title="Disponibilidade"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Nome do Instrumento -->
            <TextView
                android:id="@+id/instrumentNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Instrumento"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/name_highlight_background"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Calendário Personalizado -->
            <TextView
                android:id="@+id/calendarTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calendário de Disponibilidade"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark_brown"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/instrumentNameTextView" />

            <!-- Navegação do Calendário -->
            <LinearLayout
                android:id="@+id/calendarNavigationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/calendarTitle">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/previousMonthButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text=""
                    app:icon="@drawable/ic_arrow_back"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/nav_header_beige_light"
                    app:iconTint="@color/nav_header_beige_light"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/currentMonthText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Setembro 2025"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/nav_header_beige_light" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/nextMonthButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text=""
                    app:icon="@drawable/ic_arrow_forward"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/nav_header_beige_light"
                    app:iconTint="@color/nav_header_beige_light"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/calendarRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/nav_header_beige_light"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@id/calendarNavigationLayout" />

            <!-- Título da Lista -->
            <TextView
                android:id="@+id/listTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Períodos Indisponíveis"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/nav_header_beige_light"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/calendarRecyclerView"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Lista de Períodos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/unavailableRangesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/nav_header_beige_light"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/listTitle" />

            <!-- Estado Vazio -->
            <LinearLayout
                android:id="@+id/emptyStateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/listTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginBottom="24dp"
                    android:contentDescription="Ícone de calendário"
                    android:tint="@color/text_dark_brown" />

                <TextView
                    android:id="@+id/emptyStateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Este instrumento está disponível para todas as datas!"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark_brown"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Você pode fazer sua reserva para qualquer período desejado"
                    android:textSize="16sp"
                    android:textColor="@color/nav_header_beige_light"
                    android:gravity="center"
                    android:lineSpacingExtra="8dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
