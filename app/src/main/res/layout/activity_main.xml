<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_terracotta">

    <!-- Logo dos Instrumentos -->
    <ImageView
        android:id="@+id/logoInstrumentos"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:src="@drawable/ic_logo_instrumentos"
        android:scaleType="centerInside"
        android:contentDescription="@string/logo_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nomeApp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Nome do App -->
    <TextView
        android:id="@+id/nomeApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/app_name"
        android:textColor="@color/beige_light"
        android:textSize="42sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.02"
        app:layout_constraintTop_toBottomOf="@id/logoInstrumentos"
        app:layout_constraintBottom_toTopOf="@+id/fraseEfeito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Frase de Efeito -->
    <TextView
        android:id="@+id/fraseEfeito"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/main_tagline"
        android:textColor="@color/beige_light"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/nomeApp"
        app:layout_constraintBottom_toTopOf="@+id/containerBotoes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Container dos Botões -->
    <LinearLayout
        android:id="@+id/containerBotoes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="48dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/fraseEfeito"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <!-- Botão Entrar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/botaoEntrar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:text="@string/login_button"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/orange_primary"
            android:backgroundTint="@color/beige_light"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_login"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/orange_primary" />

        <!-- Botão Cadastrar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/botaoCadastrar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/register_button"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/orange_primary"
            android:backgroundTint="@color/beige_light"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_person_add"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/orange_primary" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>