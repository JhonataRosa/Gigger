<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título da seção -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dados Cadastrais"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_orange_dark"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <!-- Nome -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:textStyle="bold"
            android:textColor="@color/text_orange_dark"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_instrument_name"
            android:text="Carregando..." />

    </LinearLayout>

    <!-- Email -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textStyle="bold"
            android:textColor="@color/text_orange_dark"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_instrument_name"
            android:text="Carregando..." />

    </LinearLayout>

    <!-- Telefone -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefone:"
            android:textStyle="bold"
            android:textColor="@color/text_orange_dark"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_instrument_name"
            android:text="Carregando..." />

    </LinearLayout>

    <!-- Mensagem informativa -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Para atualizar seus dados, use o botão de edição na tela principal."
        android:textSize="14sp"
        android:textColor="@color/text_gray_light"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:background="@color/beige_light" />

</LinearLayout>
